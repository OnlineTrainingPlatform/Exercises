{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@application": ["application"],
      "@actors": ["application/actors"],
      "@usecases": ["application/usecases"],
      "@domain": ["domain"],
      "@infrastructure": ["infrastructure"],
      "@presentation": ["presentation"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
